  "description": "Background jobs for syncing DeFiLlama data to local database",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "sync:protocols": "node src/jobs/sync-protocols.js",
